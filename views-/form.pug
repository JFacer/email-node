extends layout/layout.pug

block content
	div.container
		h1.Banner Form
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				form(action="." method="POST")
					label(for="name") Name:
					input(
						type="text"
						id="name"
						name="name"
						class="form-control"
					)
					br
					label(for="email") Email:
					input(
						type="email"
						id="email"
						name="email"
						class="form-control"
					)
					br
					input(type="submit" value="Submit" class="btn btn-lg btn-primary btn-block")   
